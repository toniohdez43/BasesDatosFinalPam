    <input type="submit" class="btn btn-info value="Aceptar" />
</form>
<br/>






<table class="table">
    <tr>
        <th>
            Tipo de Beca
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido Paterno
        </th>
        
        <th>
            Pago 1
