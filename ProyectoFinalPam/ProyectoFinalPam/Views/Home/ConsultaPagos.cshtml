                @Html.DisplayFor(modelItem => item.FechaPago4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pago5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago5)
            </td>
            
        </tr>
    }

</table>

